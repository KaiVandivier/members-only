extends layout

block content
  h1= title

  if !currentUser
    p You must be logged in to create a message.

  else
    form(method="POST" action="")
      .form-group
        label(for="title") Title:
        input#title.form-control(
          type="text"
          name="title"
          placeholder="Message Title"
          value=(message ? message.title : "")
          required
        )

      .form-group
        label(for="text") Text:
        textarea#text.form-control(
          name="text"
          rows="3"
          placeholder="Message Text"
          required
        ) #{message ? message.title : ""}

      button.btn.btn-primary(type="submit") Submit

    if errors
      p: ul
        each error in errors
          li!= error.msg
          